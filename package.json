{
  "name": "forum-api",
  "version": "1.0.0",
  "description": "Forum Api - Dicoding Submission Backend Expert",
  "type": "module",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node src/app.js",
    "start:dev": "nodemon src/app.js",
    "test": "jest --setupFiles dotenv/config -i",
    "test:watch:change": "jest --watch --setupFiles dotenv/config -i",
    "test:watch": "jest --watchAll --coverage --setupFiles dotenv/config -i",
    "migrate:create": "node-pg-migrate create --ts --migration-file-language ts --migrations-dir=src/migrations",
    "migrate:up": "node-pg-migrate up --ts --migrations-dir=src/migrations",
    "migrate:test": "node-pg-migrate -f config/database/test.json",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix"
  },
  "keywords": [],
  "author": "tafhdytllah",
  "license": "MIT",
  "dependencies": {
    "@hapi/hapi": "^21.4.0",
    "@hapi/jwt": "^3.2.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^16.5.0",
    "nanoid": "^3.3.11",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@eslint/json": "^0.12.0",
    "@eslint/markdown": "^6.4.0",
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^7.9.1",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1"
  }
}